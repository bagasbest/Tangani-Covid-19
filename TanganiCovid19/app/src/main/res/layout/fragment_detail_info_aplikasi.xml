<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailInfoAplikasi"
    android:background="#D7DDE3"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:padding="16dp"
        >

        <TextView
            android:id="@+id/tv_back_to_beranda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/outline_arrow_back_black_18dp"
            android:drawablePadding="10dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/info_detail_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/bagas"
            app:civ_border_width="5dp"
            app:civ_border_color="@android:color/white"
            />

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bagas Pangestu"
            android:layout_below="@id/info_detail_image"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:fontFamily="@font/m_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_instagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_instagram_bagas"
            android:layout_below="@id/tv_nama"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:fontFamily="@font/m_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content_tentang_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_instagram"
            android:layout_marginTop="20dp"
            android:text="@string/tv_content_tentang_app"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#LawanCovid-19"
            android:layout_below="@+id/tv_content_tentang_app"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/m_medium"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark" />





    </RelativeLayout>
</ScrollView>